{
  "manifest_version": 2,
  "name": "Firefox Reality Vimeo.com WebCompat Enhancements",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "firefoxrealitypc-webcompat_vimeo@mozilla.org"
    }
  },
  "description": "Fixes web-site compatibility quirks for Vimeo.com when using Firefox Reality.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://vimeo.com/*",
    "https://player.vimeo.com/video/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://vimeo.com/*",
        "https://player.vimeo.com/video/*"
      ],
      "css": [
        "main.css"
      ],
      "js": [
        "main.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
